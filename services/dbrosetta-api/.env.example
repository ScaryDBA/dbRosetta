# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Database (use Azure Key Vault in production)
DATABASE_URL=postgresql://postgres:password@localhost:5432/dbrosetta?schema=dbrosetta

# Azure Key Vault (production only)
AZURE_KEY_VAULT_NAME=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# JWT / Auth
JWT_ISSUER=https://login.microsoftonline.com/{tenant-id}/v2.0
JWT_AUDIENCE=api://dbrosetta-api
JWKS_URI=https://login.microsoftonline.com/{tenant-id}/discovery/v2.0/keys

# CORS
CORS_ORIGIN=http://localhost:3000,https://your-wordpress-site.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# Logging
LOG_LEVEL=info

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
